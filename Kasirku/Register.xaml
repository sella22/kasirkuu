        <Button Name="register_btn" Content="Register" FontSize="14" Background="#000080" FontFamily="Constantia" Foreground="White" HorizontalAlignment="Center"
                Margin="258,430,265.2,62.4" Width="120" Click="onClickRegisterBtn"/>
    </Grid>
</Window>