        xmlns:local="clr-namespace:Kasirku"
        mc:Ignorable="d"
        Title="Register" Height="560" Width="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="298*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column ="0" Background="#000080" Grid.ColumnSpan="4" Height="66" Margin="0,0,-0.4,0" VerticalAlignment="Top"/>
        <TextBlock FontWeight="Bold" FontSize="30" FontFamily="Constantia" Foreground="White" VerticalAlignment="Center" Margin="210,10,186.2,473.8">Aplikasi KasirKu</TextBlock>
        <TextBlock FontWeight="Bold" FontSize="26" FontFamily="Constantia" Foreground="#2f5cb6" HorizontalAlignment="Center" Margin="258,106,265.2,372.4" Width="120">Registrasi</TextBlock>

        <TextBlock HorizontalAlignment="Left" Margin="306,197,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
