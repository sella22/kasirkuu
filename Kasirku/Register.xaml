        <TextBox Name="TxtEmail" HorizontalAlignment="Left" Height="23" Margin="230,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"/>
        <TextBox Name="TxtPassword" HorizontalAlignment="Left" Height="23" Margin="230,361,0,0" VerticalAlignment="Top" Width="183"/>
        <Button Name="kembali" Content="Back" FontSize="14" Background="#000080" FontFamily="Constantia" Foreground="White" HorizontalAlignment="Left" 
